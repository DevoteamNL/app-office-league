<?xml version="1.0" encoding="UTF-8"?>
<site>
  <form/>

  <mappings>
    <!-- /<site>/players/image/<playername> -->
    <mapping controller="/site/controllers/player-image.js" order="10">
      <pattern>/app/players/image/.*</pattern>
    </mapping>

    <!-- /<site>/teams/image/<teamname> -->
    <mapping controller="/site/controllers/team-image.js" order="10">
      <pattern>/app/teams/image/.*</pattern>
    </mapping>

    <!-- /<site>/leagues/image/<leaguename> -->
    <mapping controller="/site/controllers/league-image.js" order="10">
      <pattern>/app/leagues/image/.*</pattern>
    </mapping>

    <!-- /<site>/players/image-profile/<userKey> -->
    <mapping controller="/site/controllers/user-image.js" order="10">
      <pattern>/app/players/image-profile/.*</pattern>
    </mapping>

    <mapping controller="/services/graphql/graphql.js" order="10">
      <pattern>/app/api/graphql</pattern>
    </mapping>

    <mapping controller="/site/controllers/assets.js" order="10">
      <pattern>/app/assets/.*</pattern>
    </mapping>

    <mapping controller="/site/pages/offline/offline.js">
      <pattern>/app/offline</pattern>
    </mapping>

    <!-- mappings for routes handled in Angular -->
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/app/teams(/[^/]+)?.*</pattern>
    </mapping>
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/app/players(/[^/]+)?.*</pattern>
    </mapping>
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/app/leagues(/[^/]+)?.*</pattern>
    </mapping>
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/app/games(/[^/]+)?.*</pattern>
    </mapping>
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/app/league-create</pattern>
    </mapping>
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/app/player-create</pattern>
    </mapping>
    <mapping controller="/lib/pwa/sw-controller.js">
      <pattern>/service-worker.js</pattern>
    </mapping>
    <mapping controller="/site/pages/pwa/pwa.js" order="20">
      <pattern>/app/team-create</pattern>
    </mapping>
    <mapping controller="/lib/pwa/manifest-controller.js">
      <pattern>/app/manifest.json</pattern>
    </mapping>
    <mapping controller="/lib/pwa/favicon-controller.js">
      <pattern>/favicon.ico</pattern>
    </mapping>
    <!--<mapping controller="/site/pages/pwa/pwa.js">-->
      <!--<match>type:'com.enonic.app.officeleague:info-page'</match>-->
    <!--</mapping>-->
  </mappings>

</site>
